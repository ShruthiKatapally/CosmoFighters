<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/mainbackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/audio_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:textColor="#f1d224" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_music"
        android:id="@+id/backinmusic_bt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/roundedbutton" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/music_settings"
        android:id="@+id/music_switch"
        android:checked="false"
        android:textColor="#eaa52d"
        android:textStyle="bold"
        android:maxHeight="1500dp"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/COSMOFIGHTER"
        android:layout_alignStart="@+id/COSMOFIGHTER" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/audio_settings"
        android:id="@+id/audio_switch"
        android:checked="false"
        android:textStyle="bold"
        android:textColor="#eaa52d"
        android:textSize="40dp"
        android:layout_below="@+id/music_switch"
        android:layout_alignRight="@+id/music_switch"
        android:layout_alignEnd="@+id/music_switch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/audio_view"
        android:textColor="#eaa52d"
        android:textSize="50dp"
        android:layout_below="@+id/audio_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:textStyle="bold" />

</RelativeLayout>
