<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/mainbackground">

    <TextView android:text="@string/app_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="#eaa52d"
        android:id="@+id/app_name"
        android:textStyle="bold"
        android:singleLine="false"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_select_package"
        android:id="@+id/textLevel"
        android:textColor="#eaa52d"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/app_name"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:contentDescription="@string/title_package1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pack1_btn"
        android:src="@drawable/ic_package"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/app_name"
        android:layout_alignStart="@+id/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/title_package1"
        android:textColor="#eaa52d"
        android:id="@+id/pack1_text"
        android:layout_below="@+id/pack1_btn"
        android:layout_alignRight="@+id/pack1_btn"
        android:layout_alignEnd="@+id/pack1_btn" />

    <ImageButton
        android:contentDescription="@string/title_package2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pack2_btn"
        android:src="@drawable/ic_package"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/title_package2"
        android:textColor="#eaa52d"
        android:id="@+id/pack2_text"
        android:layout_below="@+id/pack2_btn"
        android:layout_alignRight="@+id/pack2_btn"
        android:layout_alignEnd="@+id/pack2_btn" />

    <ImageButton
        android:contentDescription="@string/title_package3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pack3_btn"
        android:src="@drawable/ic_package"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/pack3_text"
        android:layout_alignEnd="@+id/pack3_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/title_package3"
        android:textColor="#eaa52d"
        android:id="@+id/pack3_text"
        android:layout_alignTop="@+id/pack2_text"
        android:layout_alignRight="@+id/app_name"
        android:layout_alignEnd="@+id/app_name" />

</RelativeLayout>
